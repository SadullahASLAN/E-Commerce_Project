@model Order
@{
    ViewBag.Title = "Sipariş Adresi";
}

<div class="row my-3">
    <div class="col">
        <div class="row">
            <div class="col-lg-9">
                <div class="card rounded-0">
                    <div class="card-body">
                        <div class="alert alert-primary font-weight-bold shadow-lg rounded-0">Sipariş Adresi</div>
                        <div id="address1" onclick="SelectAddress(this)" name="address" class="card mb-3 rounded-0" style="opacity:0.3;cursor:pointer;">
                            <div class="row no-gutters">
                                <div class="col-sm-8 col-md p-1">
                                    <table style="height: 100%; width: 100%;">
                                        <tbody>
                                            <tr>
                                                <td class="align-middle">
                                                    <p class="mb-2">
                                                        <span class="badge badge-secondary float-right">Ev Adresi</span>
                                                    </p>
                                                    <p class="h5">
                                                        <span class="d-block d-sm-inline">Sadullah Aslan</span>
                                                        <span class="d-block d-sm-inline">0555 555 55 55</span>
                                                    </p>
                                                    <p>
                                                        Yeni Mahalle Çiçek Sokak No: 12 Daire: 5 Kadiköy/İstanbul
                                                    </p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>



                        <div id="address2" onclick="SelectAddress(this)" name="address" class="card mb-3 rounded-0" style="opacity:0.3;cursor:pointer;">
                            <div class="row no-gutters">
                                <div class="col-sm-8 col-md p-1">
                                    <table style="height: 100%; width: 100%;">
                                        <tbody>
                                            <tr>
                                                <td class="align-middle">
                                                    <p class="mb-2">
                                                        <span class="badge badge-secondary float-right">Ev Adresi</span>
                                                    </p>
                                                    <p class="h5">
                                                        <span class="d-block d-sm-inline">Sadullah Aslan</span>
                                                        <span class="d-block d-sm-inline">0555 555 55 55</span>
                                                    </p>
                                                    <p>
                                                        Yeni Mahalle Çiçek Sokak No: 12 Daire: 5 Kadiköy/İstanbul
                                                    </p>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>




                        <div id="newAddress" onclick="SelectAddress(this)" name="address" class="card mb-3 rounded-0" style="opacity:1">
                            <div class="row no-gutters">
                                <div class="col-md p-1">
                                    <button id="btnNewAddress" onclick="NewAddressForm()" type="button" class="btn btn-primary btn-block rounded-0">Yeni adres ekle</button>
                                    <form id="formNewAddress" class="collapse">
                                        <input class="form-control mb-3" type="text" placeholder="Adres başlığı">
                                        <input class="form-control mb-3" type="text" placeholder="Alıcı ad soyad">
                                        <input class="form-control mb-3" type="text" placeholder="Alıcı telefon no">
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="Adres"></textarea>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 pl-lg-0 mt-3 mt-lg-0">
                <div class="card rounded-0 mb-3">
                    <div class="card-body p-1">
                        <table class="table table-bordered table-sm text-center m-0" style="font-size: 11px;">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-left">Ürün</th>
                                    <th>Adet</th>
                                    <th>Fiyat</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var orderDetail in Model.OrderDetails)
                                {
                                    <tr>
                                        <td class="text-left">
                                            @orderDetail.Product.Name.Substring(0, 25)...
                                        </td>
                                        <td class="text-center">
                                            @orderDetail.Quantity
                                        </td>
                                        <td>
                                            @orderDetail.UnitPrice.ToString("c2")
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card rounded-0">
                    <div class="card-body text-center">
                        <p class="lead font-weight-bolder mb-1">GENEL TOPLAM</p>
                        <p class="lead font-weight-normal mb-2">
                            @Model.OrderDetails.Sum(i => i.UnitPrice).ToString("c2")
                        </p>
                        <a href="#" class="btn btn-success d-lg-block btn-continue">Devam Et</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



@section AddressSelect{
    <script>
        function NewAddressForm() {
            $('#formNewAddress').collapse('show')
            $("#btnNewAddress").css("display", "none")
        }
        function SelectAddress(item) {
            var addresses = $("[name='address']")
            $.each(addresses, function (key, value) {
                value.style.opacity = 0.3;
                value.style.borderColor = "rgba(0, 0, 0, .125)";
                value.className = value.className.replace(/\bshadow-lg\b/g, "");
                if (value.id == "newAddress" && item.id != value.id) {
                    $('#formNewAddress').collapse('hide');
                    $("#btnNewAddress").css("display", "block");
                    $("#newAddress").css("opacity", "1")
                }
            });
            $(item).css("border", "1px solid #007bff").css("opacity", "1")
            $(item).addClass("shadow-lg")
        }
        $(document).ready(function () {
            $("#address1").trigger("click");
        });
    </script>
}

